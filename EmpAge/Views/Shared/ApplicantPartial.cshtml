@model IEnumerable<EmpAge.Models.Summary>
@{ int recordsCounter = 1;}

<div class="container">
    <div class="row">
        <div class="col-md-9">
            <h3>Список резюме</h3>
            @if (Model.Count() == 0)
            {
                <h3>Нет созданных резюме</h3>
            }
            else
            {
                foreach (var summary in Model)
                {
                    <div class="row mt-3">
                        <div class="col-md-5">
                            @recordsCounter . @summary.Name
                        </div>
                        <div class="col-md-2">
                            <form method="post" asp-controller="Summaries" asp-action="Details" asp-route-id="@summary.Id">
                                <input type="submit" value="Подробнее" class="btn btn-info" />
                            </form>
                        </div>
                        <div class="col-md-2">
                            <form method="post" asp-controller="Summaries" asp-action="Delete" asp-route-id="@summary.Id">
                                <input type="submit" value="Удалить" class="btn btn-danger" />
                            </form>
                        </div>
                    </div>
                     recordsCounter++;
                }
            }
        </div>
        <div class="col-md-3">
            <div class="row justify-content-center">
                <div class="mt-2">
                    <h3>Панель управления</h3>
                    <a class="btn btn-primary mb-2" asp-controller="Summaries" asp-action="Create">Создать резюме</a>
                    <a class="btn btn-primary" asp-controller="Proposal" asp-action="Index">Посмотреть предложения</a>
                </div>
            </div>
        </div>
    </div>
</div>