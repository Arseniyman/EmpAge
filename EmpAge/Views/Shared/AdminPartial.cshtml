@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{ int recordsCounter = 1;}
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h3>Список модераторов</h3>
            @if (Model.Count() == 0)
            {
                <h3>Модераторов нет</h3>
            }
            else
            {
                foreach (var user in Model)
                {
                    <div class="row mt-3">
                        <div class="col-md-6">
                            @recordsCounter . @user.Email
                        </div>
                        <div class="col-md-2">
                            <form method="post" asp-controller="Moder" asp-action="Delete" asp-route-id="@user.Id">
                                <input type="submit" value="Удалить" class="btn btn-danger" />
                            </form>
                        </div>
                    </div>
                    recordsCounter++;
                }
                
            }
        </div>
        <div class="col-md-4 text-center">
            <a class="btn btn-primary" asp-area="" asp-controller="Moder" asp-action="Create">Добавить модератора</a>
        </div>
    </div>
</div>